<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="review"
            type="com.gmail.eamosse.idbdata.api.response.ReviewsResponse" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="399dp"
            android:layout_height="101dp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:id="@+id/authorImage"
                android:layout_width="85dp"
                android:layout_height="105dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars[0]" />

            <TextView
                android:id="@+id/authorName"
                android:layout_width="71dp"
                android:layout_height="16dp"
                android:gravity="center_vertical"
                android:text="@{review.author}"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@id/authorImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/reviewDate"
                android:layout_width="71dp"
                android:layout_height="16dp"
                android:gravity="center_vertical"
                android:text="@{review.createdAt}"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/authorName"
                tools:layout_editor_absoluteX="85dp" />

            <TextView
                android:id="@+id/reviewContent"
                android:layout_width="216dp"
                android:layout_height="18dp"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:text="@{review.content}"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/reviewDate"
                tools:layout_editor_absoluteY="16dp" />

            <RatingBar
                android:id="@+id/ratingReviewBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:layout_marginTop="12dp"
                android:numStars="5"
                android:stepSize=".5"
                android:theme="@style/RatingBarTheme"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reviewDate"
                tools:rating="4" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>